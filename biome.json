{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [
			".next",
			"dist",
			".turbo",
			"dev-dist",
			".zed",
			".vscode",
			"routeTree.gen.ts",
			"src-tauri",
			".nuxt"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"suspicious": {
				"noExplicitAny": "warn",
				"noConsole": "warn"
			},
			"recommended": true,
			"correctness": {
				"useExhaustiveDependencies": "info"
			},
			"nursery": {
				"useSortedClasses": {
					"level": "warn",
					"fix": "safe",
					"options": {
						"functions": ["clsx", "cva", "cn"]
					}
				}
			},
			"style": {
				"noNonNullAssertion": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"overrides": [
		{
			"include": ["apps/admin/**"],
			"formatter": {
				"enabled": true,
				"indentStyle": "tab"
			},
			"linter": {
				"enabled": true,
				"rules": {
					"a11y": {
						"useSemanticElements": "off",
						"noSvgWithoutTitle": "off"
					},
					"suspicious": {
						"noConsole": "warn"
					},
					"style": {
						"useSelfClosingElements": "error",
						"useImportType": "error",
						"useNodejsImportProtocol": "error",
						"useShorthandArrayType": "error",
						"useTemplate": "error",
						"useConst": "error",
						"useBlockStatements": "error",
						"useShorthandAssign": "error"
					},
					"complexity": {
						"useSimplifiedLogicExpression": "error"
					}
				}
			}
		},
		{
			"include": ["apps/public/**"],
			"formatter": {
				"enabled": true,
				"indentStyle": "tab"
			},
			"linter": {
				"enabled": true,
				"rules": {
					"a11y": {
						"useSemanticElements": "off"
					},
					"suspicious": {
						"noConsole": "warn"
					},
					"style": {
						"useSelfClosingElements": "error",
						"useImportType": "error",
						"useNodejsImportProtocol": "error",
						"useShorthandArrayType": "error",
						"useTemplate": "error",
						"useConst": "error",
						"useBlockStatements": "error",
						"useShorthandAssign": "error"
					},
					"complexity": {
						"useSimplifiedLogicExpression": "error"
					}
				}
			}
		},
		{
			"include": ["apps/server/**"],
			"formatter": {
				"enabled": true,
				"indentStyle": "tab"
			},
			"linter": {
				"enabled": true,
				"rules": {
					"a11y": {
						"useSemanticElements": "off"
					},
					"suspicious": {
						"noConsole": "warn"
					},
					"style": {
						"useSelfClosingElements": "error",
						"useImportType": "error",
						"useNodejsImportProtocol": "error",
						"useShorthandArrayType": "error",
						"useTemplate": "error",
						"useConst": "error",
						"useBlockStatements": "error",
						"useShorthandAssign": "error"
					},
					"complexity": {
						"useSimplifiedLogicExpression": "error"
					}
				}
			}
		}
	]
}
