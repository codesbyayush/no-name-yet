{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [
			".next",
			"dist",
			".turbo",
			"dev-dist",
			".zed",
			".vscode",
			"routeTree.gen.ts",
			"src-tauri",
			".nuxt"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"suspicious": {
				"noExplicitAny": "warn",
				"noConsole": "warn"
			},
			"recommended": true,
			"correctness": {
				"useExhaustiveDependencies": "info"
			},
			"nursery": {
				"useSortedClasses": {
					"level": "warn",
					"fix": "safe",
					"options": {
						"functions": ["clsx", "cva", "cn"]
					}
				}
			},
			"style": {
				"noNonNullAssertion": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"overrides": [
		{
			"include": ["apps/web/**"],
			"formatter": {
				"enabled": true,
				"indentStyle": "tab",
				"indentWidth": 2
			},
			"linter": {
				"enabled": true,
				"rules": {
					"suspicious": {
						"noConsole": "warn"
					}
				}
			}
		},
		{
			"include": ["apps/server/**"],
			"formatter": {
				"enabled": true,
				"indentStyle": "tab",
				"indentWidth": 2
			},
			"linter": {
				"enabled": true,
				"rules": {
					"suspicious": {
						"noConsole": "warn"
					}
				}
			}
		}
	]
}
