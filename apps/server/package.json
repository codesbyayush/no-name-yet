{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "exports": {
    "./types": "./src/types/index.ts"
  },
  "scripts": {
    "build": "tsc && tsc-alias",
    "check-types": "tsc --noEmit",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/src/index.js",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:reset": "bun run scripts/reset-db.ts",
    "wrangler:dev": "wrangler dev",
    "wrangler:deploy": "wrangler deploy",
    "deploy": "wrangler deploy",
    "sentry:sourcemaps": "tsc && tsc-alias && sentry-cli sourcemaps inject --org of-4f --project node-cloudflare-workers ./dist && sentry-cli sourcemaps upload --org of-4f --project node-cloudflare-workers ./dist"
  },
  "dependencies": {
    "@blocknote/server-util": "^0.42.3",
    "@cloudflare/workers-types": "^4.20250712.0",
    "@hono/zod-validator": "^0.7.0",
    "@neondatabase/serverless": "^1.0.1",
    "@octokit/app": "^16.0.1",
    "@octokit/webhooks-methods": "^6.0.0",
    "@react-email/components": "0.5.7",
    "@react-email/render": "^1.3.2",
    "@sentry/cli": "^2.58.0",
    "@sentry/cloudflare": "^10.23.0",
    "dotenv": "^17.1.0",
    "drizzle-orm": "^0.44.2",
    "drizzle-seed": "^0.3.1",
    "drizzle-valibot": "^0.4.2",
    "hono": "^4.7.6",
    "pg": "^8.14.1",
    "pino": "^10.1.0",
    "react-email": "4.3.2",
    "resend": "^6.2.2",
    "valibot": "1.2.0"
  },
  "devDependencies": {
    "pino-pretty": "^13.1.2",
    "@types/bun": "^1.2.6",
    "@types/pg": "^8.11.11",
    "drizzle-kit": "^0.31.5",
    "postgres": "^3.4.7",
    "tsc-alias": "^1.8.11",
    "wrangler": "^4.24.3"
  }
}
