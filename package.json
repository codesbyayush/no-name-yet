{
  "name": "my-better-t-app",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "build": "bun run --filter '*' build",
    "check-types": "bun run --filter '*' check-types",
    "dev:native": "bun run --filter native dev",
    "dev:web": "bun run --filter web dev",
    "dev:server": "bun run --filter server dev",
    "db:push": "bun run --filter server db:push",
    "db:studio": "bun run --filter server db:studio",
    "db:generate": "bun run --filter server db:generate",
    "db:migrate": "bun run --filter server db:migrate",
    "db:up": "docker compose up -d postgres neon-proxy",
    "db:down": "docker compose down",
    "db:logs": "docker compose logs -f postgres",
    "prepare": "husky",
    "one-version:check": "one-version check"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "@types/node": "^24.5.2",
    "husky": "^9.1.7",
    "knip": "^5.64.0",
    "lint-staged": "^16.2.4",
    "typescript": "^5.9.2",
    "ultracite": "5.6.4"
  },
  "overrides": {
    "@tanstack/db": "0.1.1",
    "@tanstack/react-db": "0.1.1",
    "@tanstack/query-db-collection": "0.1.1",
    "lucide-react": "0.525.0",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "packageManager": "bun@1.2.10",
  "dependencies": {
    "valibot": "1.1.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix"
    ]
  }
}
